<% if flash[:notice] %>
<div id="notice"> <%= flash[:notice] %> </div>
<% end %>

<h1>Listing users</h1>

<table>

<% if @users.size == 0 %>
      <p>Be the first user to register in our website!</p>
<% else %>
  <thead>
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <!--th>Password</th-->
      <th colspan="3"></th>
    </tr>
  </thead>
<% end %>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <!--td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td-->
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <!--td><%= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td-->
        <td><%= button_to 'Destroy', user, method: :delete, class: :destroy, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
